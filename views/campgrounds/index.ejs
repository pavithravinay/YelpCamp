<% include ../partials/header %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
        </p>
    </div>
</header>
<div class="row text-center" style="display: flex; flex-wrap: wrap;"> <!-- to align thumbnails -->
    <% campgrounds.forEach(function(campground) { %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail indexpage-thumbnail">
            <img src="<%= campground.image %>">
            <div class="caption">
                <h4 class="campground-name"><%= campground.name %></h4>
            </div>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
        </div>
    </div>
    <% }); %>
</div>

<% include ../partials/footer %>
